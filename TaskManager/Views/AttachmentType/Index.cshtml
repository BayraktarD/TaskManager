@model IEnumerable<TaskManager.Models.AttachmentTypeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Index</h1><hr >

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAttachmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAttachmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdAttachmentType  }) |
                @Html.ActionLink("TaskDetails", "TaskDetails", new { id=item.IdAttachmentType }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdAttachmentType })
            </td>
        </tr>
}
    </tbody>
</table>
