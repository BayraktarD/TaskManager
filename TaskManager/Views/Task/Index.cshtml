</style>



<h1>Tasks</h1>

<p>
    <a asp-action="Create" class="@(ViewBag.CanEdit ? "enabled" : "disabled")">Create New</a>

</p>

<h2>Assigned to me</h2>
<br />

<h3>To Accomplish</h3>
<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.IdTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedToString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDetails)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.AssignedToId == ViewBag.EmployeeId && x.FinishedDate == null))
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.IdTask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByString)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)

